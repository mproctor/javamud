<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE digester-rules PUBLIC
   "-//Jakarta Apache //DTD digester-rules XML V1.0//EN"
   "digester-rules.dtd">
<digester-rules>
  <pattern value="rooms">
	<object-create-rule classname="java.util.ArrayList" />
	<pattern value="room">
	  <object-create-rule classname="javamud.room.SimpleRoom" />
	  <bean-property-setter-rule pattern="title" propertyname="title" />
	  <bean-property-setter-rule pattern="description" propertyname="description" />
	  <bean-property-setter-rule pattern="roomId" propertyname="roomId" />
	  <pattern value="exits/exit">
	    <object-create-rule classname="javamud.room.SimpleExit" />
        <set-properties-rule/>
	    <set-next-rule methodname="addExit" />
	  </pattern>
	  <set-next-rule methodname="add" />
	</pattern>
  </pattern>
</digester-rules>