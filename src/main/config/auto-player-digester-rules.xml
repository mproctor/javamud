<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE digester-rules PUBLIC
   "-//Jakarta Apache //DTD digester-rules XML V1.0//EN"
   "digester-rules.dtd">
<digester-rules>
	<pattern value="players">
		<object-create-rule classname="java.util.ArrayList" />
		<pattern value="player">
			<object-create-rule classname="javamud.player.SimpleAutomatedPlayer" />
			<bean-property-setter-rule pattern="name"
				propertyname="name" />
			<bean-property-setter-rule pattern="description"
				propertyname="description" />
			<bean-property-setter-rule pattern="currentZoneId"
				propertyname="currentZoneId" />
			<bean-property-setter-rule pattern="currentRoomId"
				propertyname="currentRoomId" />
			<pattern value="keywords">
				<bean-property-setter-rule pattern="keyword"
					propertyname="keyword" />
			</pattern>
			<pattern value="routines">
				<bean-property-setter-rule pattern="routine"
					propertyname="routineName" />
			</pattern>
			<set-next-rule methodname="add" />
		</pattern>
	</pattern>
</digester-rules>
